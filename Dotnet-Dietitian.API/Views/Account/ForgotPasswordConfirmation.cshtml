@{
    ViewData["Title"] = "Şifre Sıfırlama Bağlantısı Gönderildi - DijetUP";
}

<link rel="stylesheet" href="~/css/style.css">
<style>
    .login-section {
        min-height: calc(100vh - 76px - 80px);
    }
</style>

<!-- Forgot Password Confirmation Section -->
<section class="py-5 login-section d-flex align-items-center">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5">
                        <div class="text-center">
                            <div class="mb-4">
                                <i class="bi bi-check-circle-fill text-success fs-1"></i>
                            </div>
                            <h4 class="fw-bold">E-posta Gönderildi!</h4>
                            <p class="text-muted mb-4">Şifre sıfırlama bağlantısı e-posta adresinize gönderildi. Lütfen e-posta kutunuzu kontrol edin.</p>
                            <p class="small text-muted mb-4">E-postayı birkaç dakika içinde almazsanız, spam klasörünüzü kontrol edin veya tekrar deneyin.</p>
                            <div class="d-grid gap-2">
                                <a asp-action="ForgotPassword" class="btn btn-outline-secondary">Tekrar Dene</a>
                            </div>
                            
                            <div class="mt-4">
                                <p class="text-muted">Şifrenizi hatırladınız mı? <a asp-action="Login" class="text-success">Giriş yapın</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/script.js"></script>
} 