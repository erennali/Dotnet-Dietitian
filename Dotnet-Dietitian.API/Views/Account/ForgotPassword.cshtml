@using Dotnet_Dietitian.Application.Features.CQRS.Commands.AppUserCommands
@model ForgotPasswordCommand
@{
    ViewData["Title"] = "Şifremi Unuttum - DijetUP";
}

<link rel="stylesheet" href="~/css/style.css">
<style>
    .login-section {
        min-height: calc(100vh - 76px - 80px);
    }
</style>

<!-- Forgot Password Section -->
<section class="py-5 login-section d-flex align-items-center">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <i class="bi bi-shield-lock text-success fs-1 mb-3"></i>
                            <h2 class="fw-bold">Şifremi Unuttum</h2>
                            <p class="text-muted">Şifrenizi sıfırlamak için e-posta adresinizi girin</p>
                        </div>
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <!-- Form before email is sent -->
                        <form asp-action="ForgotPassword" method="post" class="needs-validation" novalidate>
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label">E-posta Adresi</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" placeholder="ornek@email.com" required>
                                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                                </div>
                                <div class="form-text">
                                    Kayıtlı e-posta adresinize şifre sıfırlama bağlantısı göndereceğiz.
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">Şifre Sıfırlama Bağlantısı Gönder</button>
                            </div>
                        </form>
                        
                        <div class="mt-4 text-center">
                            <p class="text-muted">Şifrenizi hatırladınız mı? <a asp-action="Login" class="text-success">Giriş yapın</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
} 